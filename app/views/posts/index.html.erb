<section class='top-bar'>
<br/><br/>
</section>


<section class='posts'>
    <% @posts.each do |post| %>
      <section class='post'>


        <section class='post-user-icon'>
          <%= image_tag("user_icon.png", :alt => "user icon") %>
        </section>
        <section class="post-user-name">
          <p>User Name</p>
        </section>
        <p><%= post.message %></p>
      </section>
    <% end %>
</section>

<%= link_to new_post_path do %>
  New post
<% end %>
